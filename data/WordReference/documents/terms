	<script>
        XF.Element.extend('reaction', {
            actionClick: function(e)
            {
                e.preventDefault();
				if (this.$target.data('tooltip:taphold') && this.$target.is(e.currentTarget) || 
					($(e.currentTarget).attr('href').includes("reaction_id=1")) 
					&& $(e.currentTarget).hasClass("actionBar-action") 
					&& !$(e.currentTarget).hasClass("has-reaction"))
				{
                    // click originated from taphold event or is the default react
                    this.$target.removeData('tooltip:taphold');
                    return;
                }

                XF.ajax('post', $(e.currentTarget).attr('href'), XF.proxy(this, 'actionComplete'));
            }
        });
    </script>
	







<script>
document.addEventListener("DOMContentLoaded", function(event) {
  //This function will open a new tab when the user clicks on a term to translate it in the dictionaries
  redirectWR = function () {
    var DOMAIN = "//www.wordreference.com";
    var dict = reverseDict(getDictionary());        //Get the dictionary to use

    if(!dict) {
        console.log("... Click to translate is disabled in this page. No dictionary");
        return;
    }

    //Returns the index of a found regex pattern
    String.prototype.regexIndexOf = function (regex, startpos) {
      var indexOf = this.substring(startpos || 0).search(regex);
      return (indexOf >= 0) ? (indexOf + (startpos || 0)) : indexOf;
    };
    //Returns the last index of a found regex pattern
    String.prototype.regexLastIndexOf = function (regex, startpos) {
      regex = (regex.global) ? regex : new RegExp(regex.source, "g" + (regex.ignoreCase ? "i" : "") + (regex.multiLine ? "m" : ""));
      if (typeof (startpos) == "undefined") {
        startpos = this.length;
      } else if (startpos < 0) {
        startpos = 0;
      }
      var stringToWorkWith = this.substring(0, startpos + 1);
      var lastIndexOf = -1;
      var nextStop = 0;
      while ((result = regex.exec(stringToWorkWith)) !== null) {
        lastIndexOf = result.index;
        regex.lastIndex = ++nextStop;
      }
      return lastIndexOf;
    };

    //This will reverse a dictionary
    function reverseDict(sDict){
        if(!sDict || sDict.length != 4)
            return null;

        return sDict.substr(2, 2) + sDict.substr(0, 2);
    }

    //This function will find the dictionary to use in a forum thread
    function getDictionary(){
        let sDict;
        if(document.getElementById("French")) sDict="enfr";
        if(document.getElementById("Italian")) sDict="enit";
        if(document.getElementById("Spanish-English / Español-Inglés")) sDict="enes";
        if(document.getElementById("Español-Français")) sDict="esfr";
        if(document.getElementById("Português (Portuguese)")) sDict="enpt";
        if(document.getElementById("Português-Español")) sDict="ptes";
        if(document.getElementById("Deutsch (German)")) sDict="ende";
        if(document.getElementById("Español-Deutsch")) sDict="deen";
        if(document.getElementById("Русский (Russian)")) sDict="enru";
        if(document.getElementById("Slavic Languages")) sDict="enru";
        if(document.getElementById("中文+方言 (Chinese)")) sDict="enzh";
        if(document.getElementById("日本語 (Japanese)")) sDict="enja";
        if(document.getElementById("Türkçe (Turkish)")) sDict="entr";
        if(document.getElementById("Ελληνικά (Greek)")) sDict="engr";
        if(document.getElementById("Română (Romanian)")) sDict="enro";
        if(document.getElementById("Čeština (Czech)")) sDict="encz";
        if(document.getElementById("Polski (Polish)")) sDict="enpl";
        if(document.getElementById("한국어 (Korean)")) sDict="enko";
        if(document.getElementById("العربية (Arabic)")) sDict="enar";
        if(document.getElementById("Sólo Español")) sDict="eses";
        if(document.getElementById("English Only")) sDict= "enen";
        if(document.getElementById("Català (Catalan)")) sDict="caca";
        if(document.getElementById("Solo Italiano")) sDict="itit";

        return sDict;
    }

    //Returns the necessary information about the clicked position in an element
    function getContext(dict) {
      var range, word, className, tagName;

      if (document.caretRangeFromPoint && event.clientX && event.clientY) {
        var range = document.caretRangeFromPoint(event.clientX, event.clientY);
        if (!range) return false;

        //Check if it's not the editor
        if(range.startContainer.parentNode.parentNode.contentEditable == "true")
            return false;

        className = range.startContainer.parentNode.className;
        tagName = range.startContainer.parentNode.tagName;

        if (tagName == 'FORM' || tagName == 'INPUT' || tagName == 'A') {
          return false;
        }
        word = getWord(range.startContainer.nodeValue, range.startOffset);
      } else {
        var selection = window.getSelection();

        if (!selection.anchorNode) {
          return false;
        };
        if (selection.toString() != "" && dict != "WRsynonyms" && (selection.toString().indexOf(" ") > -1 || selection.toString().indexOf("%20") > -1)) {
          return false;
        }
        className = selection.anchorNode.parentNode.className;
        tagName = selection.anchorNode.parentNode.tagName;
        if (dict == 'WRsynonyms' && (tagName == 'FORM' || tagName == 'INPUT' || tagName == 'A')) {
          return false;
        };
        range = document.createRange();
        range.selectNodeContents(selection.anchorNode);
        word = getWord(range.toString(), selection.anchorOffset);
        if (dict == 'WRsynonyms') {
          word = range.toString();
        };
        var pNode = selection.anchorNode.parentNode;

        if (navigator.userAgent.indexOf("Android") < 0 && navigator.userAgent.indexOf("iPhone") < 0 && navigator.userAgent.indexOf("iPod") < 0) {
          if (word == '') {
            for (i = 0; i <= 2; i++) {
              if (pNode.tagName == 'TR') {
                var oldCN = 'even';
                if (pNode.nextSibling && pNode.nextSibling.className) {
                  oldCN = pNode.nextSibling.className == 'even' ? 'odd' : 'even';
                } else if (pNode.nextSibling && pNode.nextSibling.nextSibling && pNode.nextSibling.nextSibling.className) {
                  oldCN = pNode.nextSibling.nextSibling.className == 'even' ? 'odd' : 'even';
                } else if (pNode.prevSibling && pNode.prevSibling.className) {
                  oldCN = pNode.prevSibling.className == 'even' ? 'odd' : 'even';
                } else if (pNode.prevSibling && pNode.prevSibling.prevSibling && pNode.prevSibling.prevSibling.className) {
                  oldCN = pNode.prevSibling.prevSibling.className == 'even' ? 'odd' : 'even';
                };
                if (pNode.className != 'gold') {
                  pNode.className = 'gold';
                } else {
                  pNode.className = oldCN;
                }
                break;
              }
              pNode = pNode.parentNode;
            }
          };
        }
        range.detach();
      }

      //Clear the current text selection
      window.getSelection().removeAllRanges();

      return {
        "word": word,
        "klass": className,
        "tag": tagName
      };
    }

    var STRIP = /[\[\]{}():;\|,.\/'"~\s]/gi;
    function trim(word) {
      return word.replace(STRIP, "");
    }

    //Cleans and Returns the clicked word based on an offset
    function getWord(text, offset) {
      var startOfWord = /[¿\/\(\[\{\.\,\:\"\'，、／\s]/;
      var endOfWord = /[\\،\?\!\)\;\~\/\(\]\}\.\,\:\"\'，、／\s]/;
      if (!text || text === "" || offset < 0 || text.length == offset) {
        return "";
      }
      var start = text.regexLastIndexOf(startOfWord, offset);
      start = (start === -1) ? 0 : start + 1;
      var end = text.regexIndexOf(endOfWord, offset);
      end = (end === -1) ? text.length : end;
      var word = text.substring(start, end);
      return trim(word);
    }

    //Find the clicked word and open a new tab in the the corresponding dictionary
    function redirectWR(e, dict)
    {
        if(e.target.tagName == 'A')     //Cancel if it's a link
            return false;
        var context = getContext(dict);
        var word = context.word;
        if (!word) {
          return false;
        }
        if (context.tag == "A") {       //Cancel if it's a link
          return false;
        }

        var url = DOMAIN + '/' + dict + '/' + word;
        var win = window.open(url, '_blank');
        win.focus();

        return true;
    }    

    //Execute redirectWR if an bbWrapper element is clicked
    if($(".bbWrapper").length > 0){
        $(".bbWrapper").each(function () {
          var bbWrapper = this;
          //Change the pointer when over the elements that should be translated
          if($(this).find('div[contenteditable="true"]').length == 0){
              $(this).hover(function() {
                  $(this).css('cursor','pointer');
              }, function() {
                  $(this).css('cursor','auto');
              });
          }
          //Event handler
          bbWrapper.addEventListener("click", function(event) {
            if(redirectWR(event, dict))
            {
                //Term detected: prevent the event from bubbling up to parent elements, stopping any parent event handlers from being executed
                event.stopPropagation();
            }
          });
        });  

         console.log("... Click to translate is running. Selected dictionary: " + dict);
         return redirectWR;
    } else {
        //No bbWrapper elements, the script should not be run
        console.log("... Click to translate is disabled in this page.");
        return null;
    }
  } ();
});
</script>

</body>
</html>









